<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/feed_item_margin"
    android:layout_marginLeft="@dimen/feed_item_margin"
    android:layout_marginRight="@dimen/feed_item_margin"
    android:layout_marginTop="@dimen/fab_margin_top"
    app:cardCornerRadius="@dimen/feed_item_margin"
    app:cardElevation="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:id="@+id/container_reportMgr">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_apps"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageViewPicReportMgr" />

        <TextView
            android:text="This is title of report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewPicReportMgr"
            android:layout_toEndOf="@+id/imageViewPicReportMgr"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/textViewTitleReportMgr"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:text="This is description or Report This is description or Report This is description or Report This is description or Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="@color/black"
            android:layout_below="@+id/textViewTitleReportMgr"
            android:layout_alignLeft="@+id/textViewTitleReportMgr"
            android:layout_alignStart="@+id/textViewTitleReportMgr"
            android:id="@+id/textViewDescReportMgr"
            android:layout_above="@+id/textViewRateReportMgr" />

        <TextView
            android:text="hh:mm:ss dd/MM/yyyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTimeReportMgr"
            android:textStyle="normal|italic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewPicReportMgr" />

        <TextView
            android:text="999"
            android:layout_width="wrap_content"
            android:padding="@dimen/fab_margin_top"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRateReportMgr"
            android:textStyle="bold|italic"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textViewCommentReportMgr" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rate"
            android:id="@+id/imageViewRateReportMgr"
            android:layout_toStartOf="@+id/textViewRateReportMgr"
            android:layout_below="@+id/textViewDescReportMgr"
            android:layout_toLeftOf="@+id/textViewRateReportMgr" />
        <TextView
            android:text="999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCommentReportMgr"
            android:padding="@dimen/fab_margin_top"
            android:textStyle="bold|italic"
            android:layout_alignTop="@+id/imageViewCommentReportMgr"
            android:layout_toLeftOf="@+id/imageViewRateReportMgr"
            android:layout_toStartOf="@+id/imageViewRateReportMgr" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_comment"
            android:id="@+id/imageViewCommentReportMgr"
            android:layout_alignBottom="@+id/textViewTimeReportMgr"
            android:layout_toStartOf="@+id/textViewCommentReportMgr"
            android:layout_toLeftOf="@+id/textViewCommentReportMgr" />
    </RelativeLayout>
</android.support.v7.widget.CardView>