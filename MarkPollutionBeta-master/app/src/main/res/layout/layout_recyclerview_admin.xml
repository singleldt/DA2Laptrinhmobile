<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_spam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/feed_item_margin"
    android:layout_marginLeft="@dimen/feed_item_margin"
    android:layout_marginRight="@dimen/feed_item_margin"
    android:layout_marginTop="@dimen/fab_margin_top"
    app:cardCornerRadius="@dimen/feed_item_corner_radius"
    app:cardElevation="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageViewCateAdmin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/air_pollution" />

        <TextView
            android:id="@+id/textViewTitleAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewTimeAdmin"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageViewCateAdmin"
            android:layout_toLeftOf="@+id/imageViewPictureAdmin"
            android:layout_toRightOf="@+id/imageViewCateAdmin"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="25"
            android:maxLines="1"
            android:padding="2sp"
            android:text="This is the titleThis is the title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/comment"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewPictureAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/textViewTimeAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewTitleAdmin"
            android:layout_alignStart="@+id/textViewTitleAdmin"
            android:layout_below="@+id/imageViewCateAdmin"
            android:text="hh:mm:ss dd/MM/yyyy"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewDescAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewTimeAdmin"
            android:layout_toLeftOf="@+id/imageViewPictureAdmin"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="This is the description This is the description This is the description This is the description"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDescAdmin"
            android:layout_toLeftOf="@+id/textViewSpamAdmin"
            android:paddingTop="@dimen/fab_margin_top"
            app:srcCompat="@drawable/ic_spam" />

        <TextView
            android:id="@+id/textViewSpamAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/style_textvew_red"
            android:padding="2dp"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/white"
            android:textStyle="italic|bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>