<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgMarker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/tvTimeInfowindow"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:padding="2dp"
        android:text="timetimetimetime"
        android:layout_below="@+id/imgMarker"
        android:textColor="@color/timestamp"
        android:textSize="@dimen/feed_item_timestamp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="200dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgMarker"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingTop="2dp"
        android:paddingLeft="5dp"
        android:padding="5dp"
        android:text="TitleTitleTitleTitleTitleTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/imgMarker"
        android:maxLines="3"
        android:ellipsize="end"
        android:paddingTop="2dp"
        android:paddingLeft="5dp"
        android:text="Description DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/tvSumRate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/tvDesc"
        android:layout_toEndOf="@id/tvDesc"
        android:padding="2dp"
        android:text="99" />

    <TextView
        android:id="@+id/tvSumCmt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/tvDesc"
        android:layout_toLeftOf="@+id/imgRate"
        android:padding="2dp"
        android:text="99" />

    <ImageView
        android:id="@+id/imgCmt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvDesc"
        android:layout_toLeftOf="@+id/tvSumCmt"
        android:src="@drawable/ic_cmt" />

    <ImageView
        android:id="@+id/imgRate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_rates"
        android:layout_below="@+id/tvDesc"
        android:layout_toLeftOf="@+id/tvSumRate"
        android:layout_toStartOf="@+id/tvSumRate" />
</RelativeLayout>