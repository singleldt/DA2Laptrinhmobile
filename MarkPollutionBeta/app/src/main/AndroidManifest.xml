<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.markpollution">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SubmitMarkPollutionActivity"
            android:label="Submit Mark Pollution " />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCjC-2ztpg1FaPSQfFwDkCDZ66dFVrv8fA" />

        <service
            android:name=".CustomAdapter.FetchAddressIntentService"
            android:exported="false" />

        <activity android:name=".CameraActivity"></activity>
        <activity android:name="nl.changer.polypicker.ImagePickerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>